<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/multi_activity_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.example.myselfcustom.SlidingIndicatorBar
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:barColor="@color/purple"
        app:barHeight="16dp"
        app:bendingHeight="64dp"
        app:bendingRatio="0.5"
        app:bendingDirection="1" />

    <Button
        android:id="@+id/jumpAnother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="点击跳转到另一个Activity中"
        />

</LinearLayout>